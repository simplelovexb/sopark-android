<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/icon_msg"
        android:layout_width="@dimen/item_msg_icon_width"
        android:layout_height="@dimen/item_msg_icon_heigh" />

    <LinearLayout
        android:layout_marginRight="16sp"
        android:layout_marginLeft="16sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_msg_icon_heigh">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
            <TextView
                android:id="@+id/txt_msg_title"
                style="@style/blackText.titleText"
                android:text="标题"
                android:layout_weight="6"
                android:gravity="center_vertical|start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_msg_time"
                style="@style/greyText.timeText"
                android:gravity="center_vertical|end"
                android:text="10:21"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_msg_content"
                android:layout_weight="6"
                android:text="消息"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center_vertical|start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/txt_msg_tag"
                android:layout_weight="1"
                android:text="③"
                android:gravity="center_vertical|end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
