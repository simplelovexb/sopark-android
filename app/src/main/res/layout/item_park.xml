<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_park"
        android:layout_width="@dimen/item_park_icon_heigh"
        android:layout_height="@dimen/item_park_icon_width" />

    <LinearLayout
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_car_icon_width" >
        <TextView
            android:id="@+id/txt_band_and_version"
            android:layout_weight="3"
            style="@style/blackText.titleText"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_licence_plate"
            style="@style/greyText"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
