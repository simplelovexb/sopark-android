<resources>

    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="baseTextTheme" >
        <!-- Customize your theme here. -->
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="blackText" parent="baseTextTheme">
        <item name="android:textColor">@color/normalText</item>
    </style>
    <style name="greyText" parent="baseTextTheme">
        <item name="android:textColor">@color/greyText</item>
    </style>

    <style name="greyText.normalSize">
        <item name="android:textSize">@dimen/font_28</item>
    </style>

    <style name="greyText.timeText">
        <item name="android:textSize">@dimen/font_22</item>
    </style>

    <style name="blackText.titleText" >
        <item name="android:textSize">@dimen/font_34</item>
    </style>
    <style name="blackText.normalSize">
        <item name="android:textSize">@dimen/font_28</item>
    </style>

</resources>
